<section class="sec-form">
  <h2>Editar usuário</h2>
  <form action="/user/update" method="post" class="form">
  <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
      <label for="name">Nome</label>
      <input type="text" name="name" id="name" value="{{user.name}}" placeholder="Digite o nome do usuário" required>
    </div>
    <div class="form-control">
      <label for="occupation">Profissão</label>
      <input type="text" name="occupation" id="occupation" value="{{user.occupation}}" placeholder="Digite sua profissão" required>
    </div>
    <div class="form-control form-checkbox">
      <label for="newsletter">Enviar promoções</label>
      {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" id="newsletter" checked>
      {{else}}
        <input type="checkbox" name="newsletter" id="newsletter">
      {{/if}}
    </div>
    <div class="form-control">
      <input type="submit" value="Cadastrar">
    </div>
  </form>
</section>