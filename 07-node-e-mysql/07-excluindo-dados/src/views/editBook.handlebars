<section class="sec-form">
  <h2>Editar Livro</h2>
  <form action="/book/updatebook" method="post" class="form">
  <input type="hidden" name="id" value="{{book.id}}">
    <div class="form-control">
      <label for="title">Título:</label>
      <input type="text" name="title" id="title" value="{{book.title}}" placeholder="Digite o título do livro" required>
    </div>
    <div class="form-control">
      <label for="pageqty">Páginas:</label>
      <input type="number" name="pageqty" id="pageqty" value="{{book.pageqty}}" placeholder="Digite a quantidate de páginas" required>
    </div>
    <div class="form-control">
      <input type="submit" value="Editar">
    </div>
  </form>
</section>